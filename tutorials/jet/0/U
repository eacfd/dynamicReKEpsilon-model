FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

Uj  28.462;
Ue   0.00;

boundaryField
{
    Inlet1
    {
        type            fixedValue;
        value           uniform ($Uj 0 0);
    }
    Inlet2
    {
	type      fixedValue;
        value     uniform ($Ue 0 0);
    }
    outlet
    {
        type            inletOutlet;
	value           uniform (0 0 0);
	inletValue      uniform (0 0 0 );
    }
    frontAndBack
    {
        type            empty;
    }
    wall
    {   
        type            zeroGradient;
    } 
    wedge1{type wedge;}
    wedge2{type wedge;}
}


